<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <!-- Mapping configuration details between Customer class and customer table -->
<hibernate-mapping package="com.sistema.su9.su9act4.models">
 
    <class name="ProductType" table="producttype">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" />
        <!-- In lazy mode data will load only when used... -->
        <set name="products" table="product" cascade="delete"  lazy="false">
            <key>
                <column name="idproducttype"  />
            </key>
            <one-to-many class="com.sistema.su9.su9act4.models.Product" />
        </set>
    </class>
 
</hibernate-mapping>